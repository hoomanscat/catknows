{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Member Daily Snapshot",
  "type": "object",
  "properties": {
    "tenant": {"type": "string"},
    "user_id": {"type": "string"},
    "day": {"type": "string", "format": "date"},
    "points_7d": {"type": ["integer", "null"]},
    "points_30d": {"type": ["integer", "null"]},
    "points_all": {"type": ["integer", "null"]}
  },
  "required": ["tenant", "user_id", "day"]
}
